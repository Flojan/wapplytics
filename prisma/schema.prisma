// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  created      DateTime @default(now())
  updated      DateTime @updatedAt
  username     String   @unique
  password     String
  admin        Boolean  @default(false)
  timezone     String   @default("Europe/Berlin")
  timerange    String   @default("week")
  active_tiles String   @default("{\"view\":true,\"unique-user\":true,\"avg-visit-time\":true,\"bounce-rate\":true,\"country\":true,\"path\":true,\"language\":true,\"browser\":true,\"os\":true,\"device\":true,\"screen\":true,\"referrer\":true}")
}

model Website {
  id             Int       @id @default(autoincrement())
  website_nanoid String    @unique
  created        DateTime  @default(now())
  website_url    String
  website_name   String
  sessions       Session[]
  goals          Goal[]
}

model Goal {
  id         Int      @id @default(autoincrement())
  start      DateTime
  end        DateTime
  website_id Int
  website    Website  @relation(fields: [website_id], references: [id])
  goal_name  String
  indicators String
  url        String
  target     Int
}

model Session {
  id           Int      @id @default(autoincrement())
  session_uuid String   @unique
  created      DateTime @default(now())
  updated      DateTime @updatedAt
  website_id   Int
  website      Website  @relation(fields: [website_id], references: [id])
  website_url  String
  language     String
  country      String
  browser      String
  os           String
  device       String
  screen       String
  referrer     String
  views        View[]
}

model View {
  id         Int      @id @default(autoincrement())
  created    DateTime @default(now())
  session_id Int
  session    Session  @relation(fields: [session_id], references: [id])
  website_id Int
  path       String
}

