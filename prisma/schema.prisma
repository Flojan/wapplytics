// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id           Int      @id @default(autoincrement())
  created      DateTime @default(now())
  updated      DateTime @default(now())
  username     String   @unique
  password     String
  admin        Boolean  @default(false)
  settings     String   @default("{'timezone':'berlin','language':'en','theme':'dark','timerange':'week'}")
  active_tiles String   @default("{'livedata':'true','multidata':'true','bigchart':'true','goal':'true','smalltext':'true','smallchart':'true'}")
}

model website {
  website_id     Int      @id @default(autoincrement())
  website_nanoid String   @unique
  created        DateTime @default(now())
  website_url    String
  website_name   String
}

model goal {
  goal_id    Int      @id @default(autoincrement())
  start      DateTime
  end        DateTime
  website_id Int
  goal_name  String
  indicators String
  url        String
  target     Int
}

model session {
  session_id   Int      @id @default(autoincrement())
  session_uuid String   @unique
  created      DateTime @default(now())
  website_id   Int
  website_url  String
  language     String
  country      String
  browser      String
  os           String
  device       String
  screen       String
}

model view {
  view_id    Int      @id @default(autoincrement())
  created    DateTime @default(now())
  session_id Int
  website_id Int
  path       String
  referrer   String
}

